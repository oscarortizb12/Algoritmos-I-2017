// Tipo de Tierra.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include<iostream>
#include "conio.h"
#include <string>
#include "stdio.h"
#include "stdlib.h"

using namespace std;

void ALTA_SECUENCIAL(void);
void CONSULTA_SECUENCIAL(void);
void LISTADO_SECUENCIAL(void);
void MODIFICACION_SECUENCIAL(void);
void BAJA_LOGICA_SECUENCIAL(void);

struct tipo_registro
{
	int cod_prod;
	string descrip; 
	int num_plant;
	char plantaciones;

};
tipo_registro Registro;
FILE *alias;

void main()
{
	int opcion;
	do{
		cout<<"-----------------MENU-----------------"<<endl;
		cout<<"1. Para adicionar un terreno"<<endl;
		cout<<"2. Para hacer un listado de los terrenos"<<endl;
		cout<<"3. Para modificar los terrenos"<<endl;
		cout<<"4. Para dar de baja un terreno"<<endl,
			cout<<"0. Para terminar el programa"<<endl;
		cout<<"Digite su opcion: ";
		cin>>opcion;
		switch(opcion)
		{
		case 1:
			{
				ALTA_SECUENCIAL();
				break;
			}
		case 2:
			{
				LISTADO_SECUENCIAL();
				break;
			}
		case 3:
			{
				MODIFICACION_SECUENCIAL();
				break;
			}
		case 4:
			{
				BAJA_LOGICA_SECUENCIAL();
				break;
			}
		case 0:
			{
				cout<<"Fin programa"<<endl;
				break;
			}
		default:
			{
				cout<<"Opcion invalida ingrese de nuevo"<<endl;
				break;
			}
		}
	}while(opcion!=0);
	getch();
}
void ALTA_SECUENCIAL(void) 
{ 
	int cod_prod;
	cout << "\n\rALTAS DE REGISTROS DE PRODUCTOS"; 
	alias=fopen("PRODUCTO.SEC","rb+"); 
	if(alias==NULL) 
		alias=fopen("PRODUCTO.SEC","wb"); 
	cout << "\n\n\n\rNumero de terreno: ";
	cin >> cod_prod; 
	fread(&Registro,sizeof(Registro),1,alias); 
	while(!feof(alias)) 
	{ 
		if(Registro.cod_prod==cod_prod) 
		{ 
			cout << "\n\n\n\rTerreno duplicado !!!"; 
			fclose(alias); 
			getch(); 
			return; 
		} 
		fread(&Registro,sizeof(Registro),1,alias); 
	}     
	cout << "\n\rDescripcion: "; 
	cin.ignore();
	getline(cin,Registro.descrip);
	cout << "\n\rNumero de plantaciones para este campo   : "; 
	cin >> Registro.num_plant; 
	do 
	{ 
		cout << "\n\rTuvo plantaciones anteriores   : "; 
		Registro.plantaciones=toupper(getche()); 
	}while(Registro.plantaciones!='S' && Registro.plantaciones!='N'); 
	Registro.cod_prod=cod_prod; 
	fwrite(&Registro,sizeof(Registro),1,alias); 
	fclose(alias); 
	cout << "\n\n\n\rProducto registrado !!!"; 
	cout << "\n\r<<< Oprima cualquier tecla para continuar >>>"; 
	getch(); 
	return; 
} 
