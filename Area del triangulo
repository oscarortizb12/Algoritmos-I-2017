#include "stdafx.h"  
#include <iostream>  
#include "conio.h"

using namespace std;

void main()
{
	float area,base,altura; 
	cout<<"Ingrese base: ";
	cin>>base; 
	if(base<=0)
		cout<<"Dato invalido";
	else
	{
		cout<<"Ingrese altura:";
		cin>>altura;

		if(altura<=0)
			cout<<"Dato invalidos";
		else
		{
			cout<<"Ingrese altura:";
			cin>>altura;
			area=(base*altura)/2;
			cout<<"El area es: "<<area;
		}
	}
	getch(); 
}
